<h2>Update the drone</h2>
<form action="/drones/{{id}}/edit" method="POST">
    <label>Name</label>
    <input type="name" name="name" value="{{name}}"/>
    <label>Propellers</label>
    <input type="number" name="propellers" value="{{propellers}}"/>
    <label>Maximum speed</label>
    <input type="number" name="maxSpeed" value="{{maxSpeed}}"/>
    <button type="submit">Update</button>
</form>